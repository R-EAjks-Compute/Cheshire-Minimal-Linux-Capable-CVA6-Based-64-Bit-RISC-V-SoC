`ifndef __CHESHIRE_RDL__
`define __CHESHIRE_RDL__

`include "serial_link_single_channel.rdl"
`include "cheshire_regs.rdl"

addrmap cheshire #(
    longint unsigned LlcSpmCachedOffset = 0x1000_0000,
    longint unsigned LlcSpmUncachedOffset = 0x1400_0000,
    longint unsigned LlcSpmSize = 64*1024*1024,
    longint unsigned SlinkNumBits = 8
) {
    // debug_rom debug_rom @0x0000_0000;

    // idma_desc64   axi_dma       @0x0100_0000; -> update other repo

    external mem {
        mementries = 256*1024*8/64;
        memwidth = 64;
    } Boot_ROM @0x0200_0000;
    // clint clint @0x0204_0000; -> update other repo
    // IRQ_router IRQ_router @0x0208_0000; -> update other repo
    // AXI_RT (Cfg) AXI_RT @0x020C_0000; -> update other repo

    cheshire_regs cheshire_regs @0x0300_0000;
    // LLC_cfg LLC_cfg @0x0300_1000; -> update other repo
    // UART UART @0x0300_2000;
    // I2C I2C @0x0300_3000;
    // SPI_Host SPI_Host @0x0300_4000;
    // GPIO GPIO @0x0300_5000;
    serial_link_single_channel_reg #(
        .NumBits(SlinkNumBits)
    ) serial_link @0x0300_6000;
    // VGA VGA @0x0300_7000;
    // USB USB @0x0300_8000;
    // UNBENT UNBENT @0x0300_9000; -> update other repo

    // PLIC PLIC @0x0400_0000;
    // CLICs CLICs @0x0800_0000;

    external mem {
        mementries = LlcSpmSize*8/64;
        memwidth = 64;
    } LLC_SPM_cached @LlcSpmCachedOffset;
    external mem {
        mementries = LlcSpmSize*8/64;
        memwidth = 64;
    } LLC_SPM_uncached @LlcSpmUncachedOffset;

};

`endif // __CHESHIRE_RDL__
